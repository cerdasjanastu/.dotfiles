general {
    colors = true
    interval = 5
}

order += "battery all"
order += "volume master"
order += "tztime local"

battery all {
    format = " %percentage "
}

volume master {
    format = " ♪:%volume "
    format_muted = " ♪: muted (%volume) "
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

tztime local {
    format = " %a, %b %d %H:%M"
}

